<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBrown"
    tools:context=".CreateOrderActivity">
    <TextView
        android:id="@+id/textViewHello"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="8dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/darkBrown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Привет клиент!Что будете закадывать?" />
    <RadioGroup
        android:id="@+id/radioGrup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textViewHello"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/radioButtonTea"
            android:textColor="@color/white"
            android:checked="true"
            android:onClick="onClickChangeDrink"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Чай"/>
        <RadioButton
            android:id="@+id/radioButtonCoffee"
            android:textColor="@color/white"
            android:layout_margin="8dp"
            android:onClick="onClickChangeDrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Кофе"/>
        </RadioGroup>
    <TextView
        android:id="@+id/textViewEditions"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:gravity="center"
        android:textColor="@color/darkBrown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/radioGrup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Что добавить в ваш напиток?" />
    <CheckBox
        android:textColor="@color/white"
        android:id="@+id/checkboxMilk"
        android:layout_margin="8dp"
        android:text="Молоко"
        app:layout_constraintTop_toBottomOf="@+id/textViewEditions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/checkboxSugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:textColor="@color/white"
        android:id="@+id/checkboxSugar"
        android:layout_margin="8dp"
        android:text="Сахар"
        app:layout_constraintTop_toBottomOf="@+id/textViewEditions"
        app:layout_constraintStart_toStartOf="@+id/checkboxMilk"
        app:layout_constraintEnd_toEndOf="@+id/checkboxLemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:textColor="@color/white"
        android:id="@+id/checkboxLemon"
        android:layout_margin="8dp"
        android:text="Лимон"
        app:layout_constraintTop_toBottomOf="@+id/textViewEditions"
        app:layout_constraintStart_toStartOf="@+id/checkboxSugar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewChooseDrink"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:gravity="center"
        android:textColor="@color/darkBrown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/checkboxSugar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Выберите вид напитка" />
    <Spinner
        android:textColor="@color/white"
        android:id="@+id/spinnerTea"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewChooseDrink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/options_of_tea"/>
    <Spinner
        android:textColor="@color/white"
        android:id="@+id/spinnerCoffe"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewChooseDrink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/options_of_coffe"/>

    <ImageView
        android:id="@+id/buttonSendOrder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:contentDescription="Кнопка отправить заказ"
        android:onClick="onClickSendOrder"
        android:src="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCoffe" />

</androidx.constraintlayout.widget.ConstraintLayout>